@model	ITicket.Models.Empresa
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma Empresa";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Dados da Empresa a ser removida
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon	glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon	glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cnpj)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon	glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Cnpj, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer	panel-info">
        @using (Html.BeginForm())
        {
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn	btn-default" })
            @Html.AntiForgeryToken()
            <input type="submit" value="Deletar Empresa" class="btn btn-danger" />
        }
    </div>
</div>
@section ScriptPage{
    <script type="text/javascript">
    $(document).ready(function () {
        $('li').removeClass("active");
        $('#liEmpresas').addClass("active");
    });
    </script>
}
