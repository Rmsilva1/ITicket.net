@model	ITicket.Models.Empresa
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrando uma nova Empresa";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

