@model	ITicket.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title ="Visualizando detalhes de um Usuario";
}
<div class="panel panel-default">
    <div class="panel-heading">
        Dados do Usuario a ser removido
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)<br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon	glyphicon-user">
                    </i>
                </span>
                @Html.EditorFor(model => model.Nome, new{htmlAttributes = new{@class = "form-control",disabled = "disabled" } })
            </div>
        </div>
    </div>
    <div class="panel-footer	panel-info">
        @using (Html.BeginForm())
        { 
             @Html.ActionLink("Voltar", "Index", null, new{ @class = "btn	btn-default" })
             @Html.AntiForgeryToken()
            <input type="submit" value="Remover Usuario" class="btn btn-danger" />
        }
    </div>
 </div>

@section ScriptPage{
<script type="text/javascript">
    $(document).ready(function () {
        $('li').removeClass("active");
        $('#liUsuarios').addClass("active");
    });
</script>
}