@model ITicket.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um Usuario";

}
<div class="panel panel-default" style="margin-top:3%">
    <div class="panel-heading">
        Visualizando detalhes de um	Usuario
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome, new{htmlAttributes = new{ @class = "form-control", disabled = "disabled", style = "width: 30%" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "width: 30%" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha)
        <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "width: 30%" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "width: 30%" } })
            </div>
        </div>

    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn	btn-default" })
        @Html.ActionLink("Alterar", "Edit", new {id = Model.UsuarioID}, new {@class ="btn btn-primary"})      
    </div>
</div>

@section ScriptPage	{
<script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liUsuarios').addClass("active");
        });
</script>
}

